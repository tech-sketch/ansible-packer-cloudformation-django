{
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-a21529cc",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ssh_timeout": "5m",
    "ami_name": "django-practice-{{isotime | clean_ami_name}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo apt-get install software-properties-common",
      "sudo apt-add-repository ppa:ansible/ansible",
      "sudo apt-get update",
      "sudo apt-get install ansible -y"
    ]
   },{
    "type": "ansible-local",
    "playbook_file": "../ansible/packer/packer.yml",
    "group_vars": "../ansible/packer/group_vars",
    "role_paths": [
      "../ansible/packer/roles/setup_os",
      "../ansible/packer/roles/install_lib",
      "../ansible/packer/roles/install_python",
      "../ansible/packer/roles/setup_django_app",
      "../ansible/packer/roles/setup_gunicorn",
      "../ansible/packer/roles/setup_nginx"
    ]
  }]
}
